		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/morgan": "^1.9.9",
		"@types/node": "^22.10.7",
		"concurrently": "^9.1.2",
		"nodemon": "^3.1.9",
		"prettier": "^3.4.2",
		"rimraf": "^6.0.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.7.3"
	},
	"dependencies": {
		"body-parser": "^1.20.3",
